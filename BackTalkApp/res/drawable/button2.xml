<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
        <stroke
          android:width="1dp"
          android:color="@android:color/darker_gray"          
          />
      <solid
          android:color="#ef4444" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <corners
          android:radius="8dp" />
        <stroke
          android:width="1dp"
          android:color="@android:color/darker_gray"/>
      <gradient
          android:startColor="@color/orange2"
          android:endColor="@color/orange1"
          android:angle="270" />     

      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>